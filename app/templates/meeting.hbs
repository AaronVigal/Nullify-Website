<div class="h-100 full-width">
	<div class="container">
		<div class="row">
			<div class="col-md-12 justify-content-center pt-md-5 pt-3 pb-3">
				<h1 class="display-4 text-center fade-in mb-3">Meeting</h1>

				{{#if this.showCheckin}}
					<BsModal @onSubmit={{action "checkin"}} @position="center" class="text-center" as |Modal|>
						<Modal.header>
							<h4 class="modal-title">Check in to Meeting</h4>
						</Modal.header>
						<Modal.body>
							Hey! I see this this meeting is currently in-progress. Please check in if you are currently attending this meeting.<br>
							<BsButton @onClick={{action Modal.submit}} @type="primary" class="mt-3">I'm Here!</BsButton>
						</Modal.body>
					</BsModal>
				{{/if}}

				<h4 class="text-center mt-3">This meeting takes place on <strong class="text-muted">{{moment-format model.date "MM/DD/YYYY"}}</strong> from <strong class="text-muted">{{moment-format model.startTime "hh:mm A"}}</strong> to <strong class="text-muted">{{moment-format model.endTime "hh:mm A"}}</strong></h4>
			
				{{#if checkedIn}}
					<h5 class="text-center mt-3" id="checkinstatus">{{fa-icon "check-circle" fill="green"}} You're checked in üëç</h5>
				{{/if}}

				{{!-- TODO: Do something with the desc --}}
				{{!-- <h4 class="text-muted text-center">{{model.description}}</h4> --}}

				{{!-- <div class="col">
					<div class="row"><h4>Location: <span class="text-muted">{{model.location}}</span></h4></div>
					<div class="row"><h4>Topic: <span class="text-muted">{{model.topic}}</span></h4></div>
					<div class="row"><h4>Description: <span class="text-muted">{{model.description}}</span></h4></div>
					<div class="row"></div>
				</div> --}}

				<div class="d-flex justify-content-between mt-4">
					<h4>Location: <span class="text-muted">{{model.location}}</span></h4>
					<h4>Topic: <span class="text-muted">{{model.topic}}</span></h4>
				</div>

				{{!-- <div class="d-flex align-items-center">
					<h4 class="my-auto pr-1">Open meeting in</h4>
					<img src="/assets/images/zoom.png" alt="Zoom Logo" style="max-height: 25px;">
				</div> --}}

				<iframe src="https://zoom.us/wc/{{ model.zoomConf }}/join?prefer=1" allow="microphone; camera; fullscreen" sandbox="allow-forms allow-scripts allow-same-origin" class="w-100 mt-2 d-none d-lg-block" style="min-height: 700px; border: none;"></iframe>

				<h5 class="text-center mb-3 mt-4 text-muted d-none d-lg-block">
					&mdash;&nbsp;or&nbsp;&mdash;
				</h5>

				<div class="text-center mt-5 mt-lg-3">
					{{#if desktop}}
						<a href="zoommtg://zoom.us/start?confno={{model.zoomConf}}" class="btn btn-primary">Open in the Zoom app</a>
					{{else}}
						<a href="zoomus://zoom.us/start?confno={{model.zoomConf}}" class="btn btn-primary">Open in the Zoom app</a>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</div>
{{outlet}}