<div class="container pt-md-5 pt-3">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron text-center fade-in">
				<h1>Login</h1><br>

				{{#if user.errorMessage}}
					<p class="text-danger">{{user.errorMessage}}</p><br>
				{{else}}
					{{#if user.session.isAuthenticated}}
						<p class="text-success">Successfully logged in!</p><br>
					{{else}}
						<p class="text-muted">Sign in to continue.</p><br>
					{{/if}}
				{{/if}}

				<form>
					<div class="form-row align-items-center">
						<div class="col-lg-7 m-auto f-none">
							<label class="sr-only" for="inlineFormInputGroup">Email</label>
							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">{{fa-icon "envelope"}}</div>
								</div>
								{{input type="text" class="form-control" value=user.email id="email" placeholder="Email" autofocus="autofocus"}}
							</div>
						</div>
					</div>
					<div class="form-row align-items-center">
						<div class="col-lg-7 m-auto f-none">
							<label class="sr-only" for="inlineFormInputGroup">Password</label>
							<div class="input-group mb-2">
								<div class="input-group-prepend">
									<div class="input-group-text">{{fa-icon "lock"}}&nbsp;</div>
								</div>
								{{input type=passwordHiddenValue class="form-control" value=user.password enter=(action "login") id="password" placeholder="Password"}}

								{{#if passwordHidden}}
								<span local-class="passwordToggle" {{action "togglePasswordHidden"}}
									role="button">{{fa-icon "eye"}}</span>
								{{else}}
								<span local-class="passwordToggle" {{action "togglePasswordHidden"}}
									role="button">{{fa-icon "eye-slash"}}</span>
								{{/if}}
							</div>
						</div>
					</div>
					<br>
					<div class="form-horizontal form-group form-group-lg row">
						<div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3 m-auto f-none">
							<button class="btn btn-primary btn-lg btn-block" {{action "login"}}>Login</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{{liquid-outlet}}